<div class="row">
    <div class="col-md-12">
        
        <h1>{{data.programName}} - Program Code: {{data.programCode}}</h1>
        <form method="POST" action="/program/update">
        <fieldset>
            {{!-- <input type="hidden" name="programCode" value="{{programCode}}"> --}}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="programCode">Program Code:</label>
                        <input class="form-control" id="programCode" name="programCode" type="text" value="{{data.programCode}}" readonly/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="ProgramName">Program Name:</label>
                        <input class="form-control" id="programName" name="programName" type="text" value="{{data.programName}}" />
                    </div>
                </div>
            </div>
        </fieldset>
        <hr />
        <input type="submit" class="btn btn-primary pull-right" value="Update Program" /><br /><br /><br />
        </form> 
    </div>
</div>